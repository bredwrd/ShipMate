<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

	    <TableRow>
		    <TextView
	            android:hint="To"            
	            android:textSize="25sp"
		        android:textStyle="bold"/>
		    <TextView
		        android:hint="From"            
	            android:textSize="25sp"
		        android:textStyle="bold"/>
		    <TextView
		        android:hint="Delivery Standard"            
	            android:textSize="25sp"
		        android:textStyle="bold"/>
		    <TextView
		        android:hint="Shipping Type"            
	            android:textSize="25sp"
		        android:textStyle="bold"/>
		    <TextView
		        android:hint="Date"            
	            android:textSize="25sp"
		        android:textStyle="bold"/>
		</TableRow>
		<TableRow android:id="@+id/attrib_table">
		    <TextView
		        android:id="@+id/attrib_to"/>
		    <TextView
		        android:id="@+id/attrib_from"/>
		    <TextView
		        android:id="@+id/attrib_delivery_standard"/>
		    <TextView
		        android:id="@+id/attrib_type"/>
		    <TextView
		        android:id="@+id/attrib_date"/>
		</TableRow>
	</TableLayout>
    
</ScrollView>